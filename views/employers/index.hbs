<h1>Employer List</h1>
{{#if user}}
    <a href="/employers/create">Add a New Employer</a>
{{/if}}
<table class="table table-striped table-hover">
    <thead>
        <th>Name</th>
        <th>City</th>
        <th>Email</th>
        <th># of Employees</th>
        {{#if user}}
            <th class="text-center">Actions</th>
        {{/if}}
    </thead>
    <tbody>
        {{#each employers}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.city}}</td>
                <td>
                    {{#if this.contactEmail}}
                        <a href="mailto:{{this.contactEmail}}">
                            {{this.contactEmail}}
                        </a>   
                    {{/if}}             
                </td>
                <td>{{this.employees}}</td>
                {{#if ../user}}
                    <td class="text-center">
                        <a href="/employers/edit/{{this._id}}" title="Edit"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/employers/delete/{{this._id}}" title="Delete" onclick="return confirmDelete();">
                            <i class="fa-solid fa-trash-can"></i>
                        </a>                
                    </td>
                {{/if}}
            </tr>
        {{/each}}
    </tbody>
</table>